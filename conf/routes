# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index(name="index")

# Roulette tool
GET	/roulette                   controllers.Application.index(name="roulette")

#My Stream page
GET     /lapack                     controllers.Application.index(name="lapack")

#ChatSample
GET     /room/:nickName             controllers.ChatController.showRoom(nickName:String)
GET     /room/socket/:nickName      controllers.ChatController.chatSocket(nickName:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
